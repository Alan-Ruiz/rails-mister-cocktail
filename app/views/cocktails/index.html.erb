 <div>
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
      <% end %>
    </div>

<div class="cards">
    <!-- <div class="row row-cols-1 row-cols-md-3 justify-content-center" > -->
      <% @cocktails.each do |cocktail| %>
            <%= link_to cocktail_path(cocktail) do %>
              <div class="card-category custom-card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1514362453360-8f94243c9996?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=701&q=80)">
                <div>
                  <div class="card-body">
                    <h5 class="card-title text-light text-center"><%= cocktail.name %></h5>
                  </div>
                </div>
              </div>
            <% end %>
      <% end %>
    </div>
  </div>
</div>
